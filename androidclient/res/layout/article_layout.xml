<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:orientation="vertical" >

    <ImageView
        android:id="@+id/articleiconimageview"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textColor="#010002" 
        android:contentDescription="plop"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/articlenametextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/label"
        android:textSize="13sp"
        android:textColor="#010002" 
        android:layout_toRightOf="@+id/articleiconimageview" />
    
    <TextView
        android:id="@+id/articledescriptiontextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/articlenametextview"
        android:text="@+id/label"
        android:textSize="12sp" />

</RelativeLayout> 
